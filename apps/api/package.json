    "@mikro-orm/migrations": "^6.4.3",
    "@mikro-orm/nestjs": "^6.0.3",
    "@mikro-orm/postgresql": "^6.4.3",
    "@mikro-orm/reflection": "^6.4.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-fastify": "^11.0.1",
    "@nestjs/swagger": "^11.0.2",
    "@scalar/nestjs-api-reference": "^1.0.13",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^17.2.3",
    "mikro-orm-soft-delete": "1.0.0-alpha.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
